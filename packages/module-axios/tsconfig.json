{
  "include": ["lib/**/*.ts", "lib/**/*.d.ts"],
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015", "ES2021"],
    "isolatedModules": true,
    "types": ["vite/client", "node"],
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "./types",
    "emitDeclarationOnly": true,
  }
}